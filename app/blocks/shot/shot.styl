.shot
	display block

	&__track
		float left
		font 22px 'Raleway', sans-serif
		padding 10px
		border-radius 23px
		background rgba(237, 235, 240, 0.85)
		box-shadow 0 0 20px 10px #e8e8e8
		font-weight bold
		margin -60px 0 0 181px
		word-spacing 3px

		+below(1041px)
			font 17px 'Raleway', sans-serif
			margin -12px 0 0 181px

	&__bullet
		float left
		margin 7px 0 0 35px
		font 22px 'Raleway', sans-serif
		font-weight bold
		color white
		margin -50px 0 0 745px

		+below(1041px)
			font 17px 'Raleway', sans-serif
			margin -29px 0 0 479px
