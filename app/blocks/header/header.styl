.header
	background-color #252525

	&__wrapper
		display flex
		justify-content space-between
		max-width 1600px
		padding 12px 0 27px 0
		width 100%
		margin 0 auto

		+below(1041px)
			max-width 1040px
			padding 13px 0 11px 0

	&__text
		color white
		font-family 'Raleway'
		font-size 2.25em
		margin 21px 24.2% 0 0

		+below(1041px)
			font-size 1.8em
			margin 15px 18.1% 0 0

	&__logo
		margin 0 0 0 187px

		+below(1041px)
			margin 6px 0 0 37px

