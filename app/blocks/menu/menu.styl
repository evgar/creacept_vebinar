.menu
	border-top 2px solid #5277bb
	background #252525

.menu-items
	display flex
	-ms-flex-pack justify
	justify-content space-between
	width 100%
	max-width 1276px
	margin 0 auto
	max-height 52px
	font-family 'Raleway'
	cursor pointer

	+below(1041px)
		max-height 42px
		max-width 1015px

	&__home
		width 72px
		height 52px
		background url(../../images/home.png) no-repeat center
		background-color #5277bb
		position relative
		left 27px

		+below(1040px)
			height 42px
			width 56px

		&-link
			width 100%
			height 100%
			display block

	&__item
		color #fff
		font-family 'Raleway'
		font-size 1.125em
		padding 17px 0
		text-transform uppercase
		width 129px
		text-align center

		+below(1041px)
			width 98px

		div
			&:hover
				color #4e6fac

		+below(1041px)
			font-size 0.95em
			padding 12px 0

	&__sub-menu
		text-align left
		text-transform none
		padding 12px 0 12px 21px
		border-bottom 1px solid #6d6d6d

.menu-items__item > ul
	background #252525
	width 200px

	+below(1041px)
		width 155px
