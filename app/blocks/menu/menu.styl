.menu
	border-top 2px solid #5277bb
	background #252525

.menu-items
	display flex
	-ms-flex-pack justify
	justify-content space-between
	width 100%
	max-width 1276px
	margin 0 auto
	max-height 52px
	font-family 'Raleway'
	cursor pointer

	&__home
		width 72px
		height 52px
		background url(../../images/home.png) no-repeat center
		background-color #5277bb
		position relative
		left 27px

		&-link
			width 100%
			height 100%
			display block

	&__item
		color #fff
		font-family 'Raleway'
		font-size 1.125em
		padding 17px 0
		text-transform uppercase
		width 129px
		text-align center
		div
			&:hover
				color #4e6fac

	&__sub-menu
		text-align left
		text-transform none
		padding 15px 0 15px 21px
		border-bottom 1px solid #6d6d6d

.menu-items__item > ul
	background #252525
	width 200px
